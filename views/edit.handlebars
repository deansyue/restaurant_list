<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">

  <div class="container-sm">

    <div class="form-group">
      <label for="name">餐廳名稱：</label>
      <input type="text" class="form-control col-7" id="name" placeholder="餐廳名稱" name="name" value="{{ restaurant.name
        }}" required>
    </div>

    <div class="form-group">
      <label for="name_en">英文名稱：</label>
      <input type="text" class="form-control col-7" id="name_en" placeholder="餐廳英文名稱" name="name_en" value="{{
        restaurant.name_en }}">
    </div>

    <div class="form-group">
      <label for="category">類別：</label>
      <input type="text" list="categories" class="form-control col-7" id="category" placeholder="餐廳類別" name="category"
        value="{{
        restaurant.category }}" aria-describedby="categoryHelp" required>
      <datalist id="categories">
        <option>中式料理</option>
        <option>日式料理</option>
        <option>美式料理</option>
        <option>義式料理</option>
        <option>法式料理</option>
      </datalist>
      <small id="categoryHelpHelp" class="form-text text-muted">可使用下拉選單選擇餐廳種類亦可輸入選單沒有的選項</small>
    </div>

    <div class="form-group">
      <label for="rating">分數：</label>
      <input type="number" class="form-control col-7" min="0" max="10" step="0.1" id="rating" placeholder="餐廳分數"
        name="rating" value={{#if restaurant.rating}} "{{ restaurant.rating }}" {{else}} "0" {{/if}}>
    </div>

    <div class="form-group">
      <label for="location">地址：</label>
      <input type="text" class="form-control col-7" id="location" placeholder="地址" name="location" value="{{ restaurant.location
      }}">
    </div>

    <div class="form-group">
      <label for="phone">電話：</label>
      <input type="text" class="form-control col-7" id="phone" placeholder="電話" name="phone"
        value="{{ restaurant.phone }}">
    </div>

    <div class="form-group">
      <label for="description">詳細內容：</label>
      <textarea class="form-control col-7" id="description" placeholder="餐廳詳細內容" name="description" rows="3">{{
    restaurant.description }}</textarea>
    </div>

    <div class="form-group">
      <label for="image">餐廳圖片url路徑：</label>
      <input type="text" class="form-control col-7" id="image" placeholder="餐廳圖片url路徑" name="image"
        aria-describedby="imageHelp" value="{{ restaurant.image }}">
      <small id="imageHelp" class="form-text text-muted">請輸入餐廳圖片所在的url路徑</small>
      <img class="card-img-top modal-sm" src="{{ restaurant.image }}" alt="{{ restaurant.name }}">
    </div>

    <!-- edit image -->
    <!--
    <div class="form-group">
      <label for="image">餐廳圖片：</label>
      <input type="file" accept="image/*" class="form-control col-7" id="image" placeholder="餐廳圖片" name="image">
      <img class="card-img-top modal-sm" src="{{ restaurant.image }}" alt="{{ restaurant.name }}">
    </div>
    -->

    <div class="d-flex justify-content-center">
      <a class="btn btn-info mr-2" href="/restaurants/{{ restaurant._id }}" role="button">Back</a>
      <button type="submit" class="btn btn-info">Submit</button>
    </div>

  </div>
</form>